# --- An example fragment ---
onto:fragment_palmas_movimento a onto:ExplanationFragment ;
  rdfs:label "Fragmento: palmas e movimento constante"@pt ;
  onto:usesElement onto:kw_ritmo , onto:ctx_ritual , onto:ds_ritual_sonoro ;
  onto:hasActivation onto:act_musical_primary , onto:act_kine_secondary .

# Elements used by the fragment
onto:kw_ritmo a onto:Keyword ;
  rdfs:label "ritmo"@pt ;
  onto:evokesIntelligence onto:Intelligence_Musical .

onto:ctx_ritual a onto:ContextObject ;
  rdfs:label "ritual de movimento"@pt ;
  onto:evokesIntelligence onto:Intelligence_Kinesthetic ;
  onto:evokesIntelligence onto:Intelligence_Musical .

onto:ds_ritual_sonoro a onto:DiscursiveStrategy ;
  rdfs:label "ritual sonoro com palmas e batidas"@pt ;
  onto:evokesIntelligence onto:Intelligence_Musical ;
  onto:evokesIntelligence onto:Intelligence_Kinesthetic .

# Activations (reified, event-like)
onto:act_musical_primary a onto:IntelligenceActivation ;
  onto:refersTo onto:Intelligence_Musical ;
  onto:hasType "primary" ;
  onto:hasActivationScore "0.80"^^xsd:decimal .

onto:act_kine_secondary a onto:IntelligenceActivation ;
  onto:refersTo onto:Intelligence_Kinesthetic ;
  onto:hasType "secondary" ;
  onto:hasActivationScore "0.60"^^xsd:decimal .
